@import 'https://fontlibrary.org/face/cmu-serif';
@import 'https://fontlibrary.org/face/cmu-typewriter';

body {
    font-family: 'CMUSerifRoman', serif;
    font-size:   2.1em;
    font-weight: normal;
    /* font-style:  normal; */
    line-height: 110%;
    font-variant-numeric: oldstyle-nums;
}

pre, code {
    font-family: 'CMUTypewriterTextRegular', mono;
    font-size:   90%;
    font-weight: normal;
    /* font-style:  normal;  */
    line-height: 100%;
}

/* http://www.ebadf.net/2016/10/19/centering-images-in-hugo/ */
img[src$='#center']
{
    display: block;
    margin: 0.7rem auto; /* you can replace the vertical '0.7rem' by
                            whatever floats your boat, but keep the
                            horizontal 'auto' for this to work */
    /* whatever else styles you fancy here */
}

img[src$='#floatleft']
{
    float:left;
    margin: 0.7rem;      /* this margin is totally up to you */
    /* whatever else styles you fancy here */
}

img[src$='#floatright']
{
    float:right;
    margin: 0.7rem;      /* this margin is totally up to you */
    /* whatever else styles you fancy here */
}
